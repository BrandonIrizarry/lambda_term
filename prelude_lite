
# Basic definitions #

def identity := \x.x;
def first x y := x;
def second x y := y;


# Boolean-related definitions. #

def true := first;
def false := second;
def if cond e1 e2 := (cond e1 e2);


# Natural number bootstrapping definitions. #

def zero := identity;
def iszero n := (n first);
def succ n := \s.(s false n);
def pred1 n := (n second);
def pred n := (if (iszero n) zero (pred1 n));

def one := (succ zero);
